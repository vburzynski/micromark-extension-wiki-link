# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

[*.{diff,md,mdx}]
trim_trailing_whitespace = false

[{Makefile,**.mk}]
indent_style = tab

# Batch Files
[*.{cmd,bat}]
end_of_line = crlf
